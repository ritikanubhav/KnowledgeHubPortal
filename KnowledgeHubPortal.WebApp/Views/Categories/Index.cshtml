@model List<KnowledgeHubPortal.Domain.Entities.Category>

<a class="btn btn-primary" asp-controller="Categories" asp-action="Add">Add NEW Category</a>
<table class="table"> 
	<thead>
		<tr>
			<th>Category ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var category in Model)
		{
			<tr>
				<td>@category.CategoryId</td>
				<td>@category.CategoryName</td>
				<td>@category.CategoryDescription</td>
				<td><a class="btn btn-info" asp-action="Edit" asp-controller="Categories" asp-route-id="@category.CategoryId">Edit</a></td>
				<td><a class="btn btn-danger" asp-action="Delete" asp-controller="Categories" asp-route-id="@category.CategoryId" onclick="return confirm(' Are you sure you want to delete this item?')">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
